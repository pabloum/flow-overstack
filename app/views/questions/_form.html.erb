<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-3">

      <h1><%= title %></h1>

      <% if @question.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @question.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @question do |q|%>
      <div class="form-group">
        <%= q.text_field :title, placeholder: "Enter the title of the question", class: "form-control input-lg"%>
      </div>
      <div class="form-group">
        <%= q.text_area :description, placeholder: "Enter the description of the question", class: "form-control input-lg"%>
      </div>
      <div class="">
        <%= q.submit "Ask question",class: "btn btn-success btn-lg btn-block"%>
      </div>
      <% end %>

    </div>
  </div>
</div>
