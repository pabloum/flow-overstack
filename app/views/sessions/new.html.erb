<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-3">
      <h1>Log in</h1>

      <% if @error %>
        <div class="alert alert-danger">
          <p> <%= @error %> </p>
        </div>
      <% end %>

      <%= form_tag controller: :sessions, action: :create do %>
        <div class="form-group">
          <%= label_tag(:email, "Email") %>
          <%= email_field_tag(:email, nil, placeholder: "Enter your email here",class: 'form-control input-lg') %>
        </div>
        <div class="form-group">
          <%= label_tag(:password, "Password") %>
          <%= password_field_tag(:password, nil, placeholder: "Enter your password here",class: 'form-control input-lg') %>
        </div>
        <div class="text-right">
          <%= submit_tag("Log in", class: 'btn btn-success btn-lg btn-block') %>
        </div>
      <% end %>
    </div>
  </div>
</div>
